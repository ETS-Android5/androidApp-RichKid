<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Lesson1"
        >

        <TextView
            android:id="@+id/Text3.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Text3.1"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/guideline1" />

        <TextView
            android:id="@+id/Text3.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Text3.2"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/guideline3" />

        <TextView
            android:id="@+id/Text3.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Text3.3"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/guideline4" />

        <ImageView
            android:id="@+id/Photo4"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            app:layout_constraintDimensionRatio="2:0.8"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text3.3"
            app:srcCompat="@drawable/btn_slovar_01_01" />

        <TextView
            android:id="@+id/Text3.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="@string/Text3.4"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Photo4" />


        <TextView
            android:id="@+id/Text3.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="@string/Text3.5"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text3.4" />

        <ImageView
            android:id="@+id/Photo1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text3.5"
            app:srcCompat="@drawable/btn_slovar_01_01" />

        <TextView
            android:id="@+id/Text3.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/Text3.6"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Photo1" />

        <TextView
            android:id="@+id/Text3.7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/Text3.7"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text3.6" />

        <ImageView
            android:id="@+id/Photo2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text3.7"
            app:srcCompat="@drawable/btn_slovar_01_01" />

        <TextView
            android:id="@+id/Text3.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/Text3.8"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Photo2" />


        <TextView
            android:id="@+id/Text3.9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/Text3.9"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text3.8" />

        <TextView
            android:id="@+id/Text3.10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/Text3.10"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text3.9" />

        <ImageView
            android:id="@+id/Photo3_04"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            app:layout_constraintDimensionRatio="1.35:2"
            app:layout_constraintEnd_toEndOf="@id/guideline40"
            app:layout_constraintStart_toStartOf="@id/guideline39"
            app:layout_constraintTop_toBottomOf="@+id/Text3.10"
            app:srcCompat="@drawable/photo_3_04_01" />

        <TextView
            android:id="@+id/Text3.11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/Text3.11"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="italic|bold"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Photo3_04" />

        <TextView
            android:id="@+id/Text3.12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/Text3.12"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text3.11" />

        <TextView
            android:id="@+id/Text3.13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/Text3.13"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text3.12" />


        <ImageView
            android:id="@+id/Photo_3_05"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="13dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            app:layout_constraintDimensionRatio="2:0.55"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text3.12"
            app:srcCompat="@drawable/btn_slovar_01_01" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/Photo_3_05"></LinearLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.01" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.07" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.022" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.93" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6_photo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>