<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Lesson1">

        <TextView
            android:id="@+id/Text2.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Text2.1"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/guideline1" />

        <TextView
            android:id="@+id/Text2.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Text2.2"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/guideline3" />

        <TextView
            android:id="@+id/Text2.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Text2.3"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/guideline4" />

        <TextView
            android:id="@+id/Text2.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/Text2.4"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text2.3" />


        <TextView
            android:id="@+id/Text2.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Text2.5"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text2.4" />

        <ImageView
            android:id="@+id/Photo1"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text2.5"
            app:srcCompat="@drawable/u2_1" />

        <TextView
            android:id="@+id/Text2.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Text2.6"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Photo1" />
        <ImageView
            android:id="@+id/Photo1.1"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            android:layout_marginTop="13dp"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text2.6"
            app:srcCompat="@drawable/u2_2" />


        <TextView
            android:id="@+id/Text2.7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Text2.7"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Photo1.1" />

        <ImageView
            android:id="@+id/Photo2"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            android:layout_marginTop="13dp"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text2.7"
            app:srcCompat="@drawable/u2_3" />

        <TextView
            android:id="@+id/Text2.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Text2.8"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Photo2" />

        <TextView
            android:id="@+id/Text2.9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Text2.9"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:gravity="center"
            android:textStyle="italic"
            android:fontFamily="sans-serif-medium"
            android:padding="13dp"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text2.8" />


        <TextView
            android:id="@+id/Text2.10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Text2.10"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text2.9" />

        <TextView
            android:id="@+id/Text2.11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Text2.11"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text2.10" />

        <ImageView
            android:id="@+id/Photo4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            android:layout_marginTop="13dp"
            app:layout_constraintDimensionRatio="2:1.2"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text2.11"
            app:srcCompat="@drawable/u2_4" />

        <TextView
            android:id="@+id/Text2.12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Text2.12"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Photo4" />

        <TextView
            android:id="@+id/Text2.13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Text2.13"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text2.12" />


        <ImageView
            android:id="@+id/Photo_2_05"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerInside"
            android:layout_marginTop="13dp"
            app:layout_constraintDimensionRatio="2:0.55"
            app:layout_constraintEnd_toEndOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/Text2.13"
            app:srcCompat="@drawable/custom_btn_next" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/Photo_2_05"></LinearLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.012" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.07" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.025" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.045" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.93" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6_photo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
